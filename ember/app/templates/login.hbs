<h2>Who are you?</h2>
<div class="row">
  <div class="col-xs-10">
  {{view Ember.Select content=model 
                    value=selectedUser
                    optionLabelPath="content.name"
                    prompt="Select your name"
                    class="form-control"}}
  </div>
  <div class="col-xs-2">
    <button class="btn btn-default btn-primary" {{action "login" selectedUser}}>Login</button>
  </div>
</div>