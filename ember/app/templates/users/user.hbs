
<h1>{{content.name}} - Profile</h1>
{{#if isMe}}
<ul>
      <li class="textbox">
        <label>Current Password</label>
        {{input type="password" value=content.currentPassword}}
      </li>
      <li class="textbox">
        <label>New Password</label>
        {{input type="password" value=content.password}}
      </li>

      <li class="textbox">
        <label>New Password Confirmation</label>
        {{input type="password" value=content.passwordConfirmation}}
      </li>
    </ul>

{{input value=content.name on="enter" size="50"}}

<button  {{action "update"}}>update</button>
{{/if}}

<h1>Pairings</h1>
{{#each sortedPairings}}
  <h2>{{format-date startDate "dddd, MMMM DD"}} - {{format-date endDate "dddd, MMMM DD"}}</h2>
    <ul class="has-hearts">
    {{#link-to "pairings.pairing" this}}
      {{#each buddies}}
        <li>{{name}}</li>
      {{/each}}
    {{/link-to}}
    </ul> 
    
    {{#each logs}}
      {{user.screenName}} 
        <small>{{format-date createdAt "MM.DD"}}</small> 
        <i class="glyphicon glyphicon-ok"></i>
    {{/each}}
{{/each}}
