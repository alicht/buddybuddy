<a {{action "doFavorite" content}} {{bind-attr class=":favorite-button favorited:active"}} title="favorite">
  {{#if favorited}}★{{else}}☆{{/if}}
</a> 

<a {{action "toggleList"}}>{{content.favorites.length}}</a>
{{#if isShow}}
<ul>
  {{#each content.favorites}}
    <li>{{user.name}}</li>
  {{/each}}
</ul>
{{/if}}